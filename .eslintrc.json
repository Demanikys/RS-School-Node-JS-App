{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "es2020": true,
    "jasmine": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "project": [
      "tsconfig.json"
    ]
  },
  "settings": {
    "noInlineConfig": true,
    "node": {
      "tryExtensions": [
        ".json",
        ".node",
        ".ts",
        ".d.ts",
        ".js"
      ]
    }
  },
  "extends": [
    "prettier",
    "airbnb-typescript/base"
  ],
  "rules": {
    "node/no-missing-import": "off",
    "import/extensions": "off",
    "linebreak-style": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "indent": "off",
    "@typescript-eslint/indent": "off"
  }
}
